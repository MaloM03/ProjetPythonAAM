import tkinter as tk

# Fonction appelée lorsque la touche Entrée est pressée
def TouchEntrée(event):
    label.config(text=" "+ entry.get())
    entry.delete(0, 'end')

# Création des fenêtres
Connection = tk.Tk()
Connection.title("Connection")

App = tk.Tk()
App.title("ERP.Production")

#===== User =====

# Création d'une étiquette User
label = tk.Label(Connection, text="User :")
label.pack()

# Création d'une zone de saisie User 
entry = tk.Entry(Connection)
entry.pack()

#===== Password =====

# Création d'une étiquette Password
label = tk.Label(Connection, text="Password :")
label.pack()

# Création d'une zone de saisie Password
entry = tk.Entry(Connection)
entry.pack()

# Lier l'événement de pression de la touche Entrée à la fonction
entry.bind(App.mainloop(), TouchEntrée)

# Lancement de la boucle principale
Connection.mainloop()