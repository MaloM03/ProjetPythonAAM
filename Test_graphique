import tkinter as tk

def Validation(event):
    name = entry.get()
    entry.delete(0, 'end')  # Efface le contenu de la zone de saisie
    
    # Création d'une nouvelle fenêtre
    App = tk.Tk()
    App.title("ERP.Production")

    # Ajoutez des éléments à la nouvelle fenêtre
    new_label = tk.Label(App, text="Bienvenue sur la deuxième page !")
    new_label.pack()

    #fermeture auto de la fenetre de connection
    Connection.destroy()

# Création de la fenêtre principale
Connection = tk.Tk()
Connection.title("Connection")

# Création d'une étiquette
label = tk.Label(Connection, text="User : ")
label.pack()

# Création d'une zone de saisie
entry = tk.Entry(Connection)
entry.pack()

# Création d'une étiquette
label = tk.Label(Connection, text="Password : ")
label.pack()

# Création d'une zone de saisie
entry = tk.Entry(Connection)
entry.pack()

# Lier l'événement de pression de la touche Entrée à la fonction
entry.bind("<Return>", Validation)

# Lancement de la boucle principale
Connection.mainloop()
