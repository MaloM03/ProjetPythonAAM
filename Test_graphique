import tkinter as tk

# Fonction appelée lorsque la touche Entrée est pressée
def on_enter_key(event):
    label.config(text=" "+ entry.get())

# Création de la fenêtre principale
window = tk.Tk()
window.title("ERP.Production")

# Création d'une étiquette
label = tk.Label(window, text="User :")
label.pack()

# Création d'une zone de saisie
entry = tk.Entry(window)
entry.pack()

# Lier l'événement de pression de la touche Entrée à la fonction
entry.bind("<Return>", on_enter_key)

# Lancement de la boucle principale
window.mainloop()