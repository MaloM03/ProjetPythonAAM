import tkinter as tk

def ouvrir_page1():
    global page1
    if page1 is None:
        page1 = tk.Toplevel(fenetre_principale)
        page1.title("Page 1")
        label_page1 = tk.Label(page1, text="Contenu de la page 1")
        label_page1.pack(padx=20, pady=20)
        bouton_fermer_page1 = tk.Button(page1, text="Fermer la page 1", command=fermer_page1)
        bouton_fermer_page1.pack(pady=10)
    else:
        label_deja_ouvert.pack()

def fermer_page1():
    global page1
    if page1 is not None:
        page1.destroy()
        page1 = None
        label_deja_ouvert.pack_forget()

# Créer la fenêtre principale
fenetre_principale = tk.Tk()
fenetre_principale.title("Fenêtre Principale")

# Créer un bouton pour ouvrir la page 1
bouton_ouvrir_page1 = tk.Button(fenetre_principale, text="Ouvrir Page 1", command=ouvrir_page1)
bouton_ouvrir_page1.pack(pady=20)

# Créer un label pour afficher "Déjà ouvert"
label_deja_ouvert = tk.Label(fenetre_principale, text="Déjà ouvert", fg="red")

# Initialiser la variable de la page1 à None
page1 = None

# Démarrer la boucle principale Tkinter
fenetre_principale.mainloop()
