import tkinter as tk

def valider_saisie():
    entree_utilisateur = entree.get()

    # Vérifier si l'entrée utilisateur est un chiffre
    if entree_utilisateur.isdigit():
        label2.grid_forget()  # Effacer le label2
    else:
        label2.grid(row=2, column=0)  # Afficher le label2

# Créer une fenêtre Tkinter
fenetre = tk.Tk()
fenetre.title("Validation de la saisie")

# Créer une zone de saisie (entry)
entree = tk.Entry(fenetre)
entree.grid(row=0, column=0)

# Créer un bouton de validation
bouton_validation = tk.Button(fenetre, text="Valider", command=valider_saisie)
bouton_validation.grid(row=1, column=0)

# Créer un label2 (initiallement caché)
label2 = tk.Label(fenetre, text="La saisie n'est pas un chiffre.")
label2.grid(row=2, column=0, pady=5)
label2.grid_forget()  # Cacher le label2 initialement

# Démarrer la boucle principale Tkinter
fenetre.mainloop()
